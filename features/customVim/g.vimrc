" Support ctrl shortcut and clipboard
source $VIMRUNTIME/mswin.vim

" backup and restoring directory
set backupdir=~/.vim/backups
set backup
set undodir=~/.vim/undo
set undofile

" Show tabs style
set showtabline=1
" Highlight current light
set cursorline

" Hide menubar
set guioptions-=T

" Eliminate alt menukey conflict:
" set winaltkeys=no

" fonts
" set gfn=Cascadia_Code:h12:W500:cANSI:qDRAFT
" set gfw=黑体:h13
